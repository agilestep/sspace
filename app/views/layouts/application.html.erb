<body>

<nav class="navbar navbar-dark bg-dark fixed-top">
  <div class="container-fluid">
    <a class="navbar-brand"  style="font-size: 30px;" href="#">  <%= @client_address.try(:first).try(:address) %> </a>

    <ul class="navbar-nav flex-row flex-wrap bd-navbar-nav">
      <li class="nav-item col-6 col-lg-auto">
        <%= link_to "Home", home_index_path , class: 'nav-link py-2 px-0 px-lg-2' %>
      </li>
    </ul>

    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">

      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel"></h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>

      <div class="offcanvas-body">
        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
          <li class="nav-item">
            <%= link_to "Home", home_index_path , class: 'nav-link py-2 px-0 px-lg-2' %>
          </li>
          <li>
            <%= link_to "Blogs", blogs_index_path , class: 'nav-link py-2 px-0 px-lg-2' %>
          </li>

          <li>
            <%= link_to "My Background", background_index_path , class: 'nav-link py-2 px-0 px-lg-2' %>
          </li>

          <li>
            <%= link_to "Projects", experience_index_path , class: 'nav-link py-2 px-0 px-lg-2' %>
          </li>

          <li>
            <a href = "mailto: <%= my_email %>">Send Me an Email</a>
          </li>


        </ul>
      </div>
      <span> Copyright Â© <%= my_email %> </span>
    </div>
  </div>
</nav>

<%= yield %>

<script>
  //Parse and format code by highlight.js
    $( document ).ready(function() {
        $('pre code').each(function( index ) {
            hljs.highlightElement(this);
        })
    })
</script>

</body>
</html>
