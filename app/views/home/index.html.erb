
<script type="text/javascript">

    var   keyPresses = 1;
    const TYPING_SPEED = 1;

    function homePrintText(currentTextLength){
        var ourHtml = $('#info-block-hidden').html().toString();
        var textBody = ""
        textBody = ourHtml.substring(0,currentTextLength);
        if (currentTextLength >= ourHtml.length){
            clearInterval(typeInterval)
            $('#reviews_block').fadeIn('slow');
            $('#info-block-hidden').html("");
        }
        textBody += "&#9646";
        $("#info-content").html(textBody)
    }

    var typeInterval = setInterval(() => {
        homePrintText(keyPresses)
        keyPresses += 1
    }, TYPING_SPEED)
</script>

